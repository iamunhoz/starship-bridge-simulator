// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String[]
  rank String
  email String @unique
  hash String
  personalData Json?
  logs Log[]

  @@map("users")
}

model Room {
  id Int @id @default(autoincrement())
  name String @unique
  description String

  @@map("rooms")
}

enum LogAccess {
  PUBLIC
  PRIVATE
}

enum LogType {
  TEXT
  AUDIO
  VISUAL
  AUDIOVISUAL
}

model Log {
  id Int @id @default(autoincrement())
  access LogAccess
  type LogType
  text String?
  data Bytes? // not implemented yet
  userId Int
  user User @relation(fields: [userId], references: [id])
}



